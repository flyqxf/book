    <package name="advice" extends="gsp-struts-default" namespace="/advice">
        <action name="adviceList" class="com.yuanneng.book.advice.action.AdviceAction" >
            <result name="success">
                <param name="location">/pages/advice.jsp</param>
            </result>
        </action>
        <action name="adviceDetail" class="com.yuanneng.book.advice.action.AdviceDetailAction" >
            <result name="success">
